                        </div>
                        <div class="show-more-container home-show-more">
                            <a>
                                <div class="show-more">Show more</div>
                            </a>
                        </div>
                    </section>
                    <section class="login-section home-trends-section" style="margin-top: 20px">
                        <div class="content-header home-content-header">
                            <span class="content-header-text">
                                Who to follow
                            </span>
                        </div>
                        @foreach (var item in Model.UsersToFollow)
                        {
                            <div class="user-nav  user-nav-tofollow">
                                <div class="user-nav-picture-container">
                                    <img class="user-nav-picture" src=@Model.CurrentUser.AvatarPath />
                                </div>
                                <div class="user-nav-detail">
                                    <div class="user-nav-name">@item.FullName</div>
                                    <div class="user-nav-username">@@@item.UserName</div>
