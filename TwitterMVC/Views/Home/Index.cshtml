                                        <div class="tweet-submit-button" onclick="submitOnClick('add-tweet-form')">
                                            <span class="tweet-submit-text">
                                                Tweet
                                            </span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        @foreach (var tweet in Model.Tweets)
                        {
                            <div class="content-wrapper">
                                <div class="content content-home">
                                    <div class="user-tweet-picture-container">
                                        <img class="user-tweet-picture" src=@Model.CurrentUser.AvatarPath />
                                    </div>
                                    <div class="poster-tweet-container">
                                        <div class="poster-info">
                                            <span class="poster-info-fullname">@tweet.User.FullName</span>
                                            <span class="poster-info-extra">
                                                <span>@tweet.User.UserName</span>
                                                <span>&middot;</span>
                                                <span>@tweet.CreatedDate</span>
                                            </span>
                                            <div class="down-icon">
                                                <i data-feather="chevron-down" class="feather-chevron-down"></i>

                                            </div>
                                        </div>
                                        <div class="tweet-content">
                                           @tweet.Content
                                        </div>
                                        <div class="poster-tweet-controls">
                                            <div class="comment-button">
                                                <i class="far fa-comment"></i>
                                            </div>
                                            <div class="retweet-button">
                                                <i class="fas fa-retweet"></i>
                                            </div>
                                            <div class="like-button">
                                                <i class="far fa-heart"></i> @if(tweet.TweetLikes.Count != 0)
                                                {
                                                    <text>
                                                    @tweet.TweetLikes.Count
                                                    </text>
                                                }
                                            </div>
                                            <div class="share-button">
                                                <i class="fas fa-share-alt"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        }


                    </div>
                </div>
            </div>
