            <div class="login-wrapper">
                <div class="login-container">
                    <section class="login-section">
                        <img class="login-img" draggable="false"  src="~/assets/img/twitter_login_sidebar_illustration.png" >
                        <div class="login-header">
                            <span class="login-header-text">
                                See what’s happening in the world right now

                            </span>
                        </div>
                        <form asp-controller="Home" asp-action="Login" method="post" class="login-form" id="login-form-explore">
                            <div class="email-username">
                                <label class="input-label">
                                    <div>
                                        <div class="tag-container">
                                            <span class="input-tag">Phone, email or username</span>
                                        </div>
                                    </div>
                                    <div>
                                        <input type="text" name="emailOrUserName" class="email-username-input" value="" required />
                                    </div>
                                </label>
                            </div>
                            <div class="password-wrapper">
                                <div class="password">
                                    <label class="input-label">
                                        <div>
                                            <div class="tag-container">
                                                <span class="input-tag">Password</span>
                                            </div>
                                        </div>
                                        <div>
                                            <input type="password" name="password" class="password-input" value="" required />
                                        </div>
                                    </label>
                                </div>
                                <a href="/home/forgotpassword">Forgot Password?</a>
                            </div>
                            <div class="form-login-button-container">
                                <div class="form-login-button" onclick="submitOnClick('login-form-explore')">
                                    Log in
                                </div>
                            </div>
                            <div class="or-seperator">
                                or
                            </div>
                            <a href="/home/register" class="form-signup-button-container">
                                <div class="form-signup-button">
