@{
    ViewData["Title"] = "Login";
}



<div id="root-login">
    <div class="login-form-container">
        <div class="login-form-icon">
            <i class="fab fa-twitter twitter-icon-login"></i>

        </div>
        <div class="login-form-title">
            <span>
                Log in to Twitter
            </span>
        </div>
        <form asp-controller="Home" asp-action="Login" method="post" class="login-form" id="login-form">
            <div class="email-username email-2">
                <label class="input-label">
                    <div>
                        <div class="tag-container">
                            <span class="input-tag">Phone, email or username</span>
                        </div>
                    </div>
                    <div>
                        <input type="text" name="emailOrUserName" class="email-username-input" value="" required />
                    </div>
                </label>
            </div>
            <div class="password pass-2">
                <label class="input-label">
                    <div>
                        <div class="tag-container">
                            <span class="input-tag">Password</span>
                        </div>
                    </div>
                    <div>
                        <input type="password" name="password" class="password-input" value="" required />
                    </div>
                </label>
            </div>
            <div class="form-login-button-container login-button-container-2">
                <div class="form-login-button login-button-2" onclick="submitOnClick('login-form')">
                    Log in
                </div>
            </div>
            <div class="login-options-container">
                <div class="login-options">
                    <a href="/home/forgotpassword">Forgot password?</a>

                    <div class="flex-center dot-seperator">&middot;</div>

                    <div id="login-page-signup-button">Sign up for Twitter</div>

                </div>
            </div>

        </form>
    </div>
</div>
<div id="root-signup" style="display:none">
    <div class="signup-form-container">
        <div class="signup-form-icon">
            <i class="fab fa-twitter twitter-icon-login"></i>

        </div>
        <div class="signup-form-title">
            <span>
                Create your account
            </span>
        </div>
        <form asp-controller="Home" asp-action="Register" method="post" class="login-form" id="signup-form">

            <div class="email-username email-2">
                <label class="input-label">
                    <div>
                        <div class="tag-container">
                            <span class="input-tag">Name</span>
                        </div>
                    </div>
                    <div>
                        <input type="tel" name="name" class="email-username-input" value="" required />
                    </div>
                </label>
            </div>
            <div class="email-username email-2">
                <label class="input-label">
                    <div>
                        <div class="tag-container">
                            <span class="input-tag">Username</span>
                        </div>
                    </div>
                    <div>
                        <input type="text" name="username" class="email-username-input" value="" required />
                    </div>
                </label>
            </div>

            <div class="email-username email-2">
                <label class="input-label">
                    <div>
                        <div class="tag-container">
                            <span class="input-tag">Email</span>
                        </div>
                    </div>
                    <div>
                        <input type="text" name="email" class="email-username-input" value="" required />
                    </div>
                </label>
            </div>
            <div class="password pass-2">
                <label class="input-label">
                    <div>
                        <div class="tag-container">
                            <span class="input-tag">Password</span>
                        </div>
                    </div>
                    <div>
                        <input type="password" name="password" class="password-input" value="" required />
                    </div>
                </label>
            </div>
            <div class="form-login-button-container login-button-container-2">
                <div class="form-login-button login-button-2" onclick="submitOnClick('signup-form')">
                    Sign up
                </div>
            </div>

        </form>
    </div>
</div>
<div class="backdrop" id="backdrop" style="display:none; height: 100%; width: 100%">

</div>

<script>
    const formSignUpButton = document.getElementById("login-page-signup-button");
    const backdrop = document.getElementById("backdrop");

    formSignUpButton.addEventListener("click", function () {
        console.log("footer-signup");
        const signUpModal = document.getElementById("root-signup");

        const body = document.querySelector("body");
        body.style.overflow = "hidden";
        signUpModal.style.display = "flex";
        backdrop.style.display = "block";
    })


    backdrop.addEventListener("click", function () {
        const signUpModal = document.getElementById("root-signup");
        console.log("footer-backdrop")

        signUpModal.style.display = "none";
        backdrop.style.display = "none";
    })
    function submitOnClick(formName) {
        document.forms[formName].submit();
    }


    feather.replace()

</script>